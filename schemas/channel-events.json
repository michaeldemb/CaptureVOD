{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["uuid", "timestamp", "label"],
  "properties": {
    "uuid": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "label": { "type": "string" },
    "description": { "type": "string" },
    "severity": { "type": ["string", "number"] }
  },
  "additionalProperties": true
}
